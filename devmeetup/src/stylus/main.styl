@import '~vuetify/src/stylus/settings/_colors'

$theme := {
  primary: $deep-purple.darken-1
  accent: $deep-orange.accent-3
  secondary: $grey.lighten-2
  info: $blue.lighten-1
  warning: $amber.darker-2
  error: $red.accent-4
  success: $green.lighten-2
}

@import '~vuetify/src/stylus/app'

.custom-loader {
  animation: loader 1s infinite;
  display: flex;
}
@-moz-keyframes loader {
  from {
    transform: rotate(0);
  }
  to {
    transform: rotate(360deg);
  }
}
@-webkit-keyframes loader {
  from {
    transform: rotate(0);
  }
  to {
    transform: rotate(360deg);
  }
}
@-o-keyframes loader {
  from {
    transform: rotate(0);
  }
  to {
    transform: rotate(360deg);
  }
}
@keyframes loader {
  from {
    transform: rotate(0);
  }
  to {
    transform: rotate(360deg);
  }
}
